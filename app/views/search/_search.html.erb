<div class="container px-5 px-sm-0">
    <div class="row pt-3 pb-4">
        <%= form_tag(search_path , method: :get) do %>
            <%= text_field(@search_content, :search_word)%> <!--質問 なぜ@search_contentが必要?-->
            <%= select(@search_content, :search_target, [["User","target_user"], ["Book","target_book"]])%>
            <%= select(@search_content, :search_method, [["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]])%>
            <%= submit_tag "検索" %>
        <% end %>
    </div>
</div>