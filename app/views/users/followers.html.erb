<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>

      <table class='table followers_table'>
        <h2>followers</h2>
        <thead>
          <tr>
            <th>img</th>
            <th>name</th>
            <th>link</th>
          </tr>
        </thead>

        <tbody>
          <% users = @user.followed %>
          <% users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(user.follower, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <td><%= user.follower.name %></td>
            <td><%= link_to 'Show', user_path(user.follower), class: "user_#{user.follower.id}" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
